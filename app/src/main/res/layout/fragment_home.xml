<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/homeFrameLayoutFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/navRectangle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/buttonHome"
        style="@style/HomeNavigationItem"
        android:contentDescription="Home screen"
        android:text="{home}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFrameLayoutFragment"
        app:srcCompat="@drawable/ic_main" />


    <ImageView
        android:id="@+id/buttonChart"
        style="@style/HomeNavigationItem"
        android:contentDescription="Show chart"
        android:text="{chart}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonList"
        app:layout_constraintStart_toEndOf="@+id/buttonHome"
        app:layout_constraintTop_toBottomOf="@+id/homeFrameLayoutFragment"
        app:srcCompat="@drawable/ic_chart" />


    <ImageView
        android:id="@+id/buttonList"
        style="@style/HomeNavigationItem"
        android:contentDescription="List"
        android:text="{list}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonProfile"
        app:layout_constraintStart_toEndOf="@+id/buttonChart"
        app:srcCompat="@drawable/ic_operations_list" />

    <ImageView
        android:id="@+id/buttonProfile"
        style="@style/HomeNavigationItem"
        android:contentDescription="Show profile"
        android:text="{profile}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonList"
        app:layout_constraintEnd_toStartOf="@id/buttonLogout"
        app:layout_constraintTop_toBottomOf="@+id/homeFrameLayoutFragment"
        app:srcCompat="@drawable/ic_profile" />

    <ImageView
        android:id="@+id/buttonLogout"
        style="@style/HomeNavigationItem"
        android:contentDescription="Show profile"
        android:text="{profile}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFrameLayoutFragment"
        app:srcCompat="@drawable/ic_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>