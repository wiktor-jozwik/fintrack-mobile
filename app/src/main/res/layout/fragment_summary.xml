<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MainActivity">


    <TextView
        android:id="@+id/textTitle"
        style="@style/TextTitle"
        android:text="Track your money"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <TextView
        android:id="@+id/textSubtitleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Current year summary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTitle" />

    <TextView
        android:id="@+id/textIncomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Incomes"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubtitleTitle" />

    <ProgressBar
        android:id="@+id/textIncomesProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:translationX="10dp"
        app:layout_constraintEnd_toStartOf="@+id/textIncomesValue"
        app:layout_constraintTop_toBottomOf="@+id/textIncomes" />

    <TextView
        android:id="@+id/textIncomesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/textIncomesProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/textIncomes" />

    <TextView
        android:id="@+id/textOutcomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Outcomes"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIncomesValue" />

    <ProgressBar
        android:id="@+id/textOutcomesProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:translationX="10dp"
        app:layout_constraintEnd_toStartOf="@+id/textOutcomesValue"
        app:layout_constraintTop_toBottomOf="@+id/textOutcomes" />

    <TextView
        android:id="@+id/textOutcomesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOutcomes" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Balance"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOutcomesValue" />

    <ProgressBar
        android:id="@+id/textBalanceProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:translationX="10dp"
        app:layout_constraintEnd_toStartOf="@+id/textBalanceValue"
        app:layout_constraintTop_toBottomOf="@+id/textBalance" />

    <TextView
        android:id="@+id/textBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBalance" />

</androidx.constraintlayout.widget.ConstraintLayout>
